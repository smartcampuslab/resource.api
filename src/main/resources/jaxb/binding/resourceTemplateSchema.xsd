<xsd:schema version="1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">

	<xsd:complexType name="service">
		<xsd:sequence>
			<xsd:element name="description" type="xsd:string"
				minOccurs="1" />
			<xsd:element minOccurs="0" maxOccurs="unbounded" name="resource"
				type="resourceDeclaration" />
			<xsd:element minOccurs="0" maxOccurs="unbounded" name="resourceMapping"
				type="resourceMapping" />
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:ID" use="required" />
		<xsd:attribute name="name" type="xsd:string" use="required" />
	</xsd:complexType>

	<xsd:complexType name="resourceDeclaration">
		<xsd:sequence>

			<xsd:element minOccurs="0" maxOccurs="unbounded" name="resource"
				type="resourceDeclaration" />
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:ID" use="required" />
		<xsd:attribute name="name" type="xsd:string" use="required" />
	</xsd:complexType>

	<xsd:complexType name="resourceMapping">
		<xsd:sequence>

			<xsd:element name="resourceMapping" type="resourceMapping"
				minOccurs="0" maxOccurs="unbounded" />
		</xsd:sequence>
		<xsd:attribute name="method" type="xsd:string" />
		<xsd:attribute name="uri" type="xsd:string" />
		<xsd:attribute name="authority" type="xsd:string" />
		<xsd:attribute name="pathPatterns" type="xsd:string" />
	</xsd:complexType>
</xsd:schema>
